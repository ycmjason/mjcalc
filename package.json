{
  "name": "mjcalc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "vue-cli-service build",
    "test": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "deploy": "firebase -P default deploy",
    "deploy:staging": "firebase -P staging deploy",
    "dev": "vue-cli-service serve --open",
    "predeploy": "npm run build",
    "predeploy:staging": "npm run build -- --mode development"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "vue": "^2.5.21",
    "vue-i18n": "^8.7.0",
    "vue-router": "^3.0.2",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@vue/cli-plugin-babel": "^3.2.2",
    "@vue/cli-plugin-eslint": "^3.2.2",
    "@vue/cli-plugin-unit-jest": "^3.2.3",
    "@vue/cli-service": "^3.2.3",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.28",
    "@ycm.jason/eslint-config": "^1.3.1",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.6.0",
    "commitlint": "^7.2.1",
    "firebase-tools": "^6.2.2",
    "jest-when": "^2.1.0",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-i18n": "^0.5.1",
    "vue-template-compiler": "^2.5.21"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
